<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eitguide.nguyennghia.dialogandroid.MainActivity">

    <Button
        android:id="@+id/btn_dialog_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Dialog Normal" />

    <Button
        android:id="@+id/btn_dialog_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Dialog Custom" />

    <Button
        android:id="@+id/btn_dialog_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Dialog ListView" />

    <Button
        android:id="@+id/btn_dialog_single_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Dialog Sigle Select" />

    <Button
        android:id="@+id/btn_dialog_multi_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Dialog MultiSelect" />

</LinearLayout>
